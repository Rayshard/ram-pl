func CallNum(num:int) : int =
{
	if num > 5 then {
		return num;
	}
	else {
		let cnt = 0;

	while true do
    {
			cnt = cnt + 1;
			if cnt >= 0.5 then
			  break;
		};

		return cnt;
	};
};

func Factorial(num:int) : int =
{
	func helper(num:int, acc:int) : int = if(num <= 0) then acc	else helper(num - 1, acc * num);

	return helper(num, 1);
};

